# .env - Configuración para Análisis de Tendencias Tecnológicas

# Hugging Face
HUGGINGFACE_API_TOKEN=
HF_TOKEN=

# Neo4j Configuration 
NEO4J_URI=
NEO4J_USER=
NEO4J_PASSWORD=
NEO4J_DATABASE=

# Scopus API Configuration 
SCOPUS_API_KEY=

# Crossref API Configuration (OPCIONAL)
CROSSREF_EMAIL=

# Data Directory
DATA_DIR=./data_checkpoints

# Processing Limits (0 = unlimited)
MAX_PAPERS_ENRICH=0
MAX_PAPERS_IMPORT=0
MAX_PAPERS_CITATIONS=0
MAX_PAPERS_AUTHORS=0

# Batch Sizes
BATCH_SIZE_IMPORT=50
BATCH_SIZE_CITATIONS=5
BATCH_SIZE_AUTHORS=100

# Enable/Disable Parallel Processing
ENABLE_PARALLEL_PROCESSING=true

# Chemical-BERT Configuration
MODEL_CACHE_DIR=./cache
MIN_PAPERS_PER_TECHNOLOGY=3
CONFIDENCE_THRESHOLD=0.3
GROWTH_RATE_THRESHOLD=0.05

# Dashboard Configuration
DASHBOARD_PORT=8501
DASHBOARD_HOST=localhost

# ===== OpenAI API =====
OPENAI_API_KEY=

# OpenAlex polite pool
OPENALEX_EMAIL=
OPENALEX_SLEEP=0.2

# Limite opcional de abstracts a procesar (0 = todos)
MAX_ABSTRACTS=0
